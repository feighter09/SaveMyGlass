<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/backgroundLayout"
    tools:context=".FullscreenActivity">

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/speedTextView"
        android:layout_gravity="right|bottom"
        android:textSize="90dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/speedUnitTextView" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mph"
        android:id="@+id/speedUnitTextView"
        android:layout_gravity="right|bottom"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_below="@+id/speedTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/speedLimitTextView"
        android:textSize="34dp"
        android:singleLine="false"
        android:layout_marginRight="27dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="limit"
        android:id="@+id/textView"
        android:layout_below="@+id/speedLimitTextView"
        android:layout_alignRight="@+id/speedLimitTextView" />

</RelativeLayout>
