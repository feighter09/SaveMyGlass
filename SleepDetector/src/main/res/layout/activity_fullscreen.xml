<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/backgroundLayout"
    tools:context=".FullscreenActivity">

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/speedTextView"
        android:layout_gravity="right|bottom"
        android:textSize="90dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tempTextView"
        android:gravity="center"
        android:layout_alignRight="@+id/speedUnitTextView" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mph"
        android:id="@+id/speedUnitTextView"
        android:layout_gravity="right|bottom"
        android:textSize="30dp"
        android:layout_below="@+id/speedTextView"
        android:layout_toRightOf="@+id/tempTextView"
        android:gravity="center" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40Â°"
        android:id="@+id/tempTextView"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:textSize="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/speedLimitTextView"
        android:textSize="90dp"
        android:singleLine="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="34dp" />

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Limit"
        android:id="@+id/textView2"
        android:layout_gravity="right|bottom"
        android:textSize="30dp"
        android:singleLine="false"
        android:gravity="center"
        android:layout_below="@+id/speedLimitTextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="34dp"
        android:layout_alignLeft="@+id/speedLimitTextView" />
</RelativeLayout>
